<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.NavigatorActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/wallPaperApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="200dp"
        android:paddingVertical="10dp"
        android:shadowColor="@color/blue"
        android:text="@string/wallpaper_app"
        android:textAllCaps="false"
        app:cornerRadius="40dp"
        app:elevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/teamBuildingApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingVertical="10dp"
        android:shadowColor="@color/blue"
        android:text="@string/team_building_app"
        android:textAllCaps="false"
        app:cornerRadius="40dp"
        app:elevation="20dp"
        app:layout_constraintEnd_toEndOf="@id/wallPaperApp"
        app:layout_constraintStart_toStartOf="@id/wallPaperApp"
        app:layout_constraintTop_toBottomOf="@id/wallPaperApp" />


</androidx.constraintlayout.widget.ConstraintLayout>